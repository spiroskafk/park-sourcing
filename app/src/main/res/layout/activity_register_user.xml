<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.authentication.RegisterUserActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/dancing"
            android:text="Register new account"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/dancing"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="@string/register_text"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edittext_register_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:background="@drawable/oval"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:padding="3dp" />

    <EditText
        android:id="@+id/edittext_register_email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="375dp"
        android:background="@drawable/oval"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="3dp" />

    <EditText
        android:id="@+id/edittext_register_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="425dp"
        android:background="@drawable/oval"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="3dp"
        android:text="Password" />

    <CheckBox
        android:id="@+id/checkbox_register_user"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/edittext_register_password"
        android:layout_toStartOf="@+id/checkbox_register_company"
        android:text="User" />

    <CheckBox
        android:id="@+id/checkbox_register_company"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edittext_register_password"
        android:layout_marginEnd="97dp"
        android:text="Company" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="119dp" />


    <Button
        android:id="@+id/button_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:background="@drawable/buttonstyle"
        android:text="Register account"
        android:textAllCaps="false"
        android:textColor="#fff" />

</RelativeLayout>